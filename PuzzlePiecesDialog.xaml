<Window x:Class="PuzzleGame.PuzzlePiecesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите количество пазлов" SizeToContent="WidthAndHeight">
    <Grid Height="100" Width="324" RenderTransformOrigin="0.585,0.51">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="48"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Количество по горизонтали:" Margin="5,5,5,5"/>
        <TextBlock Text="Количество по вертикали:" Margin="5,5,5,5" Grid.Row="1"/>
        <TextBox x:Name="HorizontalTextBox" Text="5" Margin="116,8,0,8" Grid.Column="1" HorizontalAlignment="Left" Width="30"/>
        <TextBox x:Name="VerticalTextBox" Text="5" Margin="116,10,10,9" Grid.Row="1" Grid.Column="1"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="158,11,0,9" Grid.Row="1" Width="128" Grid.ColumnSpan="2">
            <Button Content="Применить" Width="60" Click="ApplyButton_Click" Height="28"/>
            <Button Content="Отмена" Width="65" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
