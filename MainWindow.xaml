<Window x:Class="PuzzleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Puzzle" Height="725" Width="1213">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
            <Button Content=" Выбрать фото " Click="ChoosePhotoButton_Click" Width="296" Height="25"/>
            <Button Content="проверка" Click="CheckButton_Click" Width="296" Height="25"/>
            <Button Content="количество пазлов" Height="25" Width="296" Click="NumberOfPiecesButton_Click"/>
        </StackPanel>
        <Canvas Name="canvas" Grid.Row="1" Background="LightGray" MouseMove="Canvas_MouseMove" MouseUp="Canvas_MouseUp" Margin="27,0,354,171">
            <Image Name="imagePlaceholder" Stretch="Fill"/>
        </Canvas>
    </Grid>
</Window>
