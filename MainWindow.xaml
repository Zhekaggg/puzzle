<Window x:Class="PuzzleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Puzzle" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Content="Choose Photo" Click="ChoosePhotoButton_Click"/>
            <Button Content="Check" Click="CheckButton_Click"/>
        </StackPanel>
        <Canvas Name="canvas" Grid.Row="1" Background="LightGray" MouseMove="Canvas_MouseMove" MouseUp="Canvas_MouseUp">
            <Image Name="imagePlaceholder" Stretch="Fill"/>
        </Canvas>
    </Grid>
</Window>
